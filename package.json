{
	"name": "sonos-speakers",
	"version": "0.1.0",
	"api_version": "1.0.0",
	"description": "Sonos Speakers",
	"keywords": [
		"Audio",
		"Media"
	],
	"manufacturer": "Sonos",
	"product": "Speakers",
	"shortname": "sonos-speakers",
	"homepage": "https://github.com/bitfocus/companion-module-sonos-speakers#readme",
	"main": "dist/index.js",
	"scripts": {
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint . --ext .ts",
		"postinstall": "yarn build"
	},
	"author": "Julian Waller <git@julusian.co.uk>",
	"license": "MIT",
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint-fix"
		]
	},
	"engines": {
		"node": "^12.14 || 14"
	},
	"dependencies": {
		"@svrooij/sonos": "^1.1.4"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "^0.2.4",
		"@types/debug": "^4.1.5",
		"@types/node": "^12.19.14",
		"rimraf": "^3.0.2",
		"typescript": "~4.1.5"
	}
}
